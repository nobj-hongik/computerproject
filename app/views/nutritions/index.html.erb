<h1>영양제 목록</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Character</th>
      <th>Function</th>
      <th>Precaution</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nutritions.each do |nutrition| %>
      <tr>
        <td><%= nutrition.name %></td>
        <td><%= nutrition.brand %></td>
        <td><%= nutrition.character %></td>
        <td><%= nutrition.function %></td>
        <td><%= nutrition.precaution %></td>
        <td><%= link_to 'Show', nutrition %></td>
        <td><%= link_to 'Edit', edit_nutrition_path(nutrition) %></td>
        <td><%= link_to 'Destroy', nutrition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '영양제 등록하기', new_nutrition_path %>
